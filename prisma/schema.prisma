generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model Book {
  id       Int     @id @default(autoincrement())
  title    String
  authorId Int
  ISBN     String  @unique
  memberId Int?
  author   Author  @relation(fields: [authorId], references: [id])
  member   Member? @relation(fields: [memberId], references: [id])
  genres   Genre[] @relation("BookToGenre")
}

model Author {
  id        Int    @id @default(autoincrement())
  name      String @unique
  biography String
  books     Book[]
}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[] @relation("BookToGenre")
}

model Member {
  id      Int    @id @default(autoincrement())
  name    String
  email   String @unique
  address String
  books   Book[]
}
